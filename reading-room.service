[Unit]
Description=Reading Room
After=network.target

[Service]
WorkingDirectory=/usr/local/lib/reading-room
#EnvironmentFile=-/var/myapp/env
#Environment="DATABASE_URL=jdbc:postgresql://localhost/app?user=app_user&password=secret"
ExecStart=/usr/bin/java -Xmx256m -jar /usr/local/lib/reading-room/reading-room.jar
User=reading-room

[Install]
WantedBy=multi-user.target